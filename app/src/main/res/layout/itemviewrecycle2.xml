<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="5dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_box"
        android:clipToPadding="false"
        >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundred2"
            android:layout_alignParentStart="true"
            android:text="judul"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:id="@+id/judul1"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:layout_below="@id/judul1"
            android:layout_marginTop="10dp"
            android:text="judul2"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:id="@+id/judul2"></TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Divider"></View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="content"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/judul2"
            android:id="@+id/content1"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="63dp"
            android:layout_toRightOf="@id/content1"
            android:text="content2"
            android:textSize="25sp"

            android:textColor="@color/Black"
            android:textStyle="bold"
            android:id="@+id/content2"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content2"
            android:layout_marginTop="12dp"
            android:text="price"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:id="@+id/price1"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content2"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/price1"
            android:text="pricedisc"
            android:textColor="@color/DarkGray"
            android:background="@drawable/pricediscdrawable"
            android:textSize="18sp"
            android:id="@+id/pricedisc1"></TextView>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>