<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="399dp"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="5dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_box"
        android:elevation="30dp"
        android:clipToPadding="false"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/image"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/backgroundred"
            android:layout_alignParentStart="true"
            android:text="judul"
            android:textColor="@color/White"
            android:layout_marginTop="1dp"
            android:textSize="18sp"
            android:id="@+id/judul"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:layout_below="@id/judul"
            android:layout_marginTop="10dp"
            android:text="judul2"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:id="@+id/judul2"></TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Divider"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="content"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/judul2"
            android:id="@+id/content">
        </TextView>


        <TextView
            android:id="@+id/content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/content"
            android:text="content2"
            android:textSize="25sp"
            android:textColor="@color/Black"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginTop="12dp"
            android:text="price"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/Red"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/pricedisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/price"
            android:text="pricedisc"
            android:textColor="@color/DarkGray"
            android:background="@drawable/pricediscdrawable"
            android:textSize="18sp"></TextView>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>